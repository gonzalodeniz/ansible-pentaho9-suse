# .env file for Ansible Pentaho + PostgreSQL Installation

# Pentaho Configuration
# PENTAHO_VERSION=9.4
# PENTAHO_INSTALL_DIR=/opt/pentaho
# PENTAHO_USER=pentaho
# PENTAHO_GROUP=pentaho


# Instala PostgreSQL en el mismo equipo que Pentaho
POSTGRES_VERSION=16
POSTGRES_INSTALL_LOCAL=true

# PostgreSQL Root User Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# PostgreSQL Pentaho User Configuration
PENTAHO_DB_JCR_PASSWORD=jcr_user
PENTAHO_DB_QUARTZ_PASSWORD=pentaho_user
PENTAHO_DB_HIBERNATE_PASSWORD=hibuser


# # PostgreSQL Data Directory
# POSTGRES_DATA_DIR=/var/lib/postgresql/data

# # Java Configuration (for Pentaho)
# JAVA_HOME=/usr/lib/jvm/java-11-openjdk
# JAVA_OPTS=-Xms512m -Xmx2048m

# # Additional Settings
# PENTAHO_SERVER_PORT=8080
# PENTAHO_SERVER_PROTOCOL=http
